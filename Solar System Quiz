<script>
    const quiz = document.getElementById('quiz');
    quiz.addEventListener('submit', function(event){
        event.preventDefault();
        const answers = {
            q1: 'b',
            q2: 'b',
            q3: 'c',
            q4: 'c',
            q5: 'b',
            q6: 'b',
            q7: 'b',
            q8: 'c',
            q9: 'a',
            q10: 'a',
            q11: 'a',
            q12: 'b',
            q13: 'a',
            q14: 'b',
            q15: 'b',
            q16: 'a',
            q17: 'd',
            q18: 'a',
            q19: 'b',
            q20: 'a',
            q21: 'd',
            q22: 'a',
            q23: 'b',
            q24: 'c',
            q25: 'a',
            q26: 'b',
            q27: 'a',
            q28: 'a',
            q29: 'c',
            q30: 'c'
        };
        let score = 0;
        let wrongAnswers = [];
        for (let i = 1; i <= 30; i++){
            const radios = document.getElementsByName('q' + i);
            let answeredCorrectly = false;
            for (let j = 0; j < radios.length; j++){
                const radio = radios[j];
                if (radio.value === answers['q' + i] && radio.checked){
                    score++;
                    answeredCorrectly = true;
                }
            }
            if (!answeredCorrectly) {
                wrongAnswers.push(i);
            }
        }
        alert('You got ' + score + ' out of 30 questions correct!');
        if (wrongAnswers.length > 0) {
            alert('You answered the following questions incorrectly: ' + wrongAnswers.join(', '));
        }
        if (wrongAnswers.length === 0) {
            alert('You answered all questions correctly! ( You are a Solar System Expert! )');
        }
        if (score < 15) {
            alert('You need to study more about the Solar System and Dwarf Planets!');
        }
        if (score >= 15 && score < 25) {
            alert('You have a good knowledge of the Solar System and Dwarf Planets!');
        }
        if (score >= 25) {
            alert('You are a Solar System and Dwarf Planets Genius!');
        }
        if (score === 30) {
            alert('You are a Solar System and Dwarf Planets Master!');
        }
    });
    var big = document.getElementsByTagName("input");
    for (var i = 0; i < big.length; i++) {
        big[i].style.color = "blue";
        big[i].style.fontWeight = "900";
        big[i].style.fontSize = "20px";
        big[i].style.fontFamily = "Monospace";
        big[i].style.border = "2px solid black";
    }
</script>
